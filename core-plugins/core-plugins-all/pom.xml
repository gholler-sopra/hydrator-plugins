  <parent>
    <artifactId>hydrator-plugins</artifactId>
    <groupId>co.cask.hydrator</groupId>
    <version>2.1.1-SNAPSHOT_5.1.216</version>
  </parent>

  <name>Hydrator Core Plugins All</name>
  <artifactId>core-plugins-all</artifactId>

  <dependencies>
    <!-- https://mvnrepository.com/artifact/ch.ethz.ganymed/ganymed-ssh2 -->
